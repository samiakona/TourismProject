@model IEnumerable<Tourism.DTO.LocationDTO>

<div class="container my-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Location List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Location" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <!-- Search Form -->
    <div class="row mt-4">
        <div class="col-md-8 offset-md-2">
            <form asp-controller="Location" asp-action="Index" method="get" class="input-group mb-3">
                <input type="text" name="searchString" class="form-control" placeholder="Search by name or location" value="@ViewData["searchString"]">
               <button class="btn btn-primary" type="submit">Search</button>
                <a asp-controller="Location" asp-action="Index" class="btn btn-secondary ms-2">Show All</a>
            </form>
        </div>
    </div>

    <!-- Display Warning Message -->
    @if (TempData["warning"] != null)
    {
        <div class="alert alert-warning">@TempData["warning"]</div>
    }

    <!-- Categories Table -->
