                    <thead class="table-dark">
                        <tr class="text-center">

                            <th>Location Name</th>
                            <th>Location Address</th>
                            <th>Location City</th>
                            <th>Capacity</th>
                            <th>Cost </th>
                            <th>Actions</th>
                        </tr>
